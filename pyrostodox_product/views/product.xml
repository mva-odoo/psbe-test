<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pyrostodox_product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="oem"/>
                <field name="upc"/>
                <field name="manufacturer_id"/>
                <field name="is_available"/>
                <field name="date_available"/>
            </xpath>
            <xpath expr="//field[@name='description']/.." position="before">
                <group>
                    <group>
                        <label for="public_price" string="Retail USD" modifiers="{}"/>
                        <div class="o_row" modifiers="{}">
                            <field name="public_price"/>
                            <field name="public_price_currency_id"/>
                        </div>
                        <label for="public_price_dif1" string="Dealer Price EUR" modifiers="{}"/>
                        <div class="o_row" modifiers="{}">
                            <field name="public_price_dif1"/>
                            <field name="public_price_dif1_currency_id"/>
                        </div>
                        <label for="public_price_dif2" string="Dealer Price EUR / Dropshipment" modifiers="{}"/>
                        <div class="o_row" modifiers="{}">
                            <field name="public_price_dif2"/>
                            <field name="public_price_dif2_currency_id"/>
                        </div>
                        <label for="public_price_dif3" string="Tarif 3" modifiers="{}"/>
                        <div class="o_row" modifiers="{}">
                            <field name="public_price_dif3"/>
                            <field name="public_price_dif3_currency_id"/>
                        </div>
                        <label for="public_price_dif4" string="Tarif 4" modifiers="{}"/>
                        <div class="o_row" modifiers="{}">
                            <field name="public_price_dif4"/>
                            <field name="public_price_dif4_currency_id"/>
                        </div>
                        <label for="no_tax_price" string="Retail EUR" modifiers="{}"/>
                        <div class="o_row" modifiers="{}">
                            <field name="no_tax_price"/>
                            <field name="no_tax_price_currency_id"/>
                        </div>
                    </group>
                    <group>
                        <field name="link"/>
                        <field name="page"/>
                        <field name="origin"/>
                        <label for="weight" string="Weight" modifiers="{}"/>
                        <div class="o_row" modifiers="{}">
                            <field name="weight"/>
                            <field name="weight_unit"/>
                        </div>
                        <field name="fam_web"/>
                        <field name="compatibility"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
